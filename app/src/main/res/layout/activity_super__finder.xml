<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.c2.mealonwheels.Activity.Super_Finder">

    <Button
        android:id="@+id/btnhost"
        android:layout_width="wrap_content"
        android:background="@color/red"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:text="host" />

    <Button
        android:id="@+id/btnclient"
        android:background="@color/fbutton_color_emerald"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnhost"
        android:layout_alignStart="@+id/btnhost"
        android:layout_below="@+id/btnhost"
        android:layout_marginTop="123dp"
        android:text="Client" />

    <Button
        android:id="@+id/button4"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
