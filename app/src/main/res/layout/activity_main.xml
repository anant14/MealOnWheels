<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context="com.c2.mealonwheels.Activity.MainActivity">

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#ffffff"
            app:mtf_image="@drawable/ic_place_black_24dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Source"
                android:id="@+id/etfrom"
                android:textColor="#333"
                android:textSize="15sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#ffffff"
        android:layout_marginBottom="10dp"
        app:mtf_image="@drawable/ic_place_black_24dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"
            android:id="@+id/etto"
            android:textColor="#333"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

   <Button
       android:layout_width="280dp"
       android:layout_gravity="center"
       android:layout_margin="5dp"
       android:layout_marginTop="10dp"
       android:id="@+id/btnR"
       android:shadowColor="@color/fbutton_color_alizarin"
       app:cornerRadius="5dp"
       app:shadowEnabled="true"
       app:shadowHeight="5dp"
       android:text="Find Restauraunt on Route"
       android:layout_height="wrap_content" />

    <Button
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:id="@+id/btngwf"
        android:shadowColor="@color/fbutton_color_alizarin"
        app:cornerRadius="5dp"
        app:shadowEnabled="true"
        android:layout_margin="5dp"
        app:shadowHeight="5dp"
        android:text="Super Restaurant Finder"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/btnef"
        android:shadowColor="@color/fbutton_color_alizarin"
        app:cornerRadius="5dp"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        android:text="Edit preferences"
        android:layout_height="wrap_content" />

</android.support.v7.widget.LinearLayoutCompat>
